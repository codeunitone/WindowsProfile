{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "final_space": false,
    "osc99": true,
    "blocks": [
      {
        "type": "prompt",
        "alignment": "left",
        "segments": [
          {
            "type": "root",
            "style": "diamond",
            "leading_diamond": "",
            "trailing_diamond": "",
            "foreground": "#E5C07B",
            "background": "#E06C75",
            "properties": {
              "root_icon": "\uf292",
              "prefix": "<parentBackground>\uE0B0</> "
            }
          },
          {
            "type": "path",
            "style": "powerline",
            "powerline_symbol": "\uE0B0",
            "background": "#61AFEF",
            "foreground": "#282C34",
            "properties": {
              "style": "full",
              "enable_hyperlink": true
            }
          },
          {
            "type": "poshgit",
            "style": "powerline",
            "powerline_symbol": "\uE0B0",
            "foreground": "#DCDFE4",
            "background": "#282C34",
            "properties": {
              "prefix": " \uE725 "
            }
          }
        ]
      },
      {
        "type": "prompt",
        "alignment": "right",
        "segments": [
          {
            "type": "node",
            "style": "diamond",
            "leading_diamond": " \uE0B6",
            "trailing_diamond": "\uE0B4",
            "foreground": "#98C379",
            "background": "#282C34",
            "properties": {
              "prefix": "\uE718 ",
              "postfix": "",
              "display_package_manager": true,
              "yarn_icon": " <#348cba></>",
              "npm_icon": " <#cc3a3a></> "
            }
          },
          {
            "type": "time",
            "style": "diamond",
            "invert_powerline": true,
            "leading_diamond": " \uE0B6",
            "trailing_diamond": "\uE0B4",
            "background": "#61AFEF",
            "foreground": "#282C34",
            "properties": {
              "prefix": " \uf5ef ",
              "postfix": " "
          }
          }
        ]
      },
      {
        "type": "prompt",
        "alignment": "left",
        "newline": true,
        "segments": [
          {
            "type": "text",
            "style": "plain",
            "foreground": "#98C379",
            "properties": {
              "prefix": "",
              "postfix": "",
              "text": "╰─"
            }
          },
          {
            "type": "exit",
            "style": "plain",
            "foreground": "#DCDFE4",
            "properties": {
              "prefix": "\u276F",
              "display_exit_code": false,
              "always_enabled": true,
              "error_color": "#ef5350"
            }
          }
        ]
      }
    ]
  }